<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center">

    <Button
        android:id="@+id/btnCreateClub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/design_default_color_secondary_variant"
        android:text="Create New Club"
        android:textColor="#FFF"
        android:textSize="12.5sp" />

    <Button
        android:id="@+id/btnJoinClub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCreateClub"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/design_default_color_secondary_variant"
        android:text="Join Available Club"
        android:textColor="#FFF"
        android:textSize="12.5sp" />

    <Button
        android:id="@+id/btnJoinedClub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCreateClub"
        android:layout_gravity="center"
        android:layout_marginTop="91dp"
        android:background="@color/design_default_color_secondary_variant"
        android:text="Joined Club"
        android:textColor="#FFF"
        android:textSize="12.5sp" />

</RelativeLayout>