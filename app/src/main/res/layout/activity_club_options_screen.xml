<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/clubIv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_club" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clubIv"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCreateClub"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded_corners"
            android:drawableLeft="@drawable/ic_create_new_club"
            android:text="Create New Club"
            android:textColor="#FFF"
            android:textSize="12.5sp" />

        <Button
            android:id="@+id/btnJoinClub"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCreateClub"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners"
            android:drawableLeft="@drawable/ic_join_available_club"
            android:text="Join Available Club"
            android:textColor="#FFF"
            android:textSize="12.5sp" />

        <Button
            android:id="@+id/btnJoinedClub"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCreateClub"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners"
            android:drawableLeft="@drawable/ic_joined_club"
            android:text="Joined Club"
            android:textColor="#FFF"
            android:textSize="12.5sp" />

    </LinearLayout>

    <!--    <ImageView-->
    <!--        android:id="@+id/clubOptionsPageAdIv"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:background="@drawable/psych_ad" />-->


</RelativeLayout>