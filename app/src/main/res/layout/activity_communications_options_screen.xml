<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:padding="5dp">

    <ImageView
        android:id="@+id/commuIv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_commu_conversation" />

    <LinearLayout
        android:layout_below="@id/commuIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnRcvdMsgs"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners"
            android:drawableLeft="@drawable/ic_received_msg"
            android:text="Received Messages"
            android:textColor="#FFF"
            android:textSize="12.5sp" />

        <Button
            android:id="@+id/btnNewMsg"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rounded_corners"
            android:drawableLeft="@drawable/ic_compose_msg"
            android:text="New Message"
            android:textColor="#FFF"
            android:textSize="12.5sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/commuOptionsPageAdIv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/consult_ad" />

</RelativeLayout>